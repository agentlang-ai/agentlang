# Optimize cache usage
prefer-offline=true

# Network optimization
fund=false
audit=false
progress=false
prefer-dedupe=true
maxsockets=50
fetch-retry-mintimeout=2000
fetch-retry-maxtimeout=10000
fetch-retry-factor=2
fetch-retries=2

# Timeout settings
fetch-timeout=60000

# Build script configuration
# Allow all build scripts to run (required for esbuild and sqlite3)
enable-pre-post-scripts=true
ignore-scripts=false

# CI environment variables are set by GitHub Actions
# These settings are automatically applied in CI
