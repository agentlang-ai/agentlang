{
  "name": "agentlang",
  "scopeName": "source.agentlang",
  "fileTypes": [
    ".al"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.agentlang",
      "match": "\\b(color|def|down|for|move|pen|to|up)\\b"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.agentlang",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.agentlang"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.agentlang"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.agentlang"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.agentlang"
        }
      ]
    }
  }
}
